@model UisCompanyTask.ViewModel.ProductViewModel

@{
    ViewData["Title"] = "Create Product";
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
<div class="container mt-5">
    <div class="card shadow rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Create New Product</h4>
        </div>
        <div class="card-body">
            <form asp-action="save" method="post" asp-controller="Product">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" class="form-control" placeholder="Enter product price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label fw-semibold"></label>
                    <input asp-for="Quantity" class="form-control" placeholder="Enter product quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Unit" class="form-label fw-semibold"></label>
                    <input asp-for="Unit" class="form-control" placeholder="e.g. Kg, Piece, Box" />
                    <span asp-validation-for="Unit" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" asp-controller="ProductTransaction" class="btn btn-outline-secondary">Back to List</a>
                    <input type="submit" value="Create Product" class="btn btn-success px-4" />
                </div>
            </form>
        </div>
    </div>
</div>
